---
import "@styles/global.css";
import { SITE } from '@config/global/site.mjs';

// SEO
import { SEO } from 'astro-seo';
import { getSeoData } from '@utilities/seo.mjs'
const props = Astro.props.frontmatter || Astro.props;
const seo = getSeoData(props.seo || {});
const body = Astro.props.body || ""
---
<!DOCTYPE html>
<html lang={ SITE.lang }>
  <head>
    <SEO { ...seo } />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class={body}><slot /></body>
</html>